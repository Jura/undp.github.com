<table id='totals-table' class='chart modality coreTable'>
  <thead>
    <th>Core Contributions</th>
    <tr>
      <td>Country Core Contribution</td>
      <td>Percent of Contributions</td>
      <td>Core Contributions from All Donors</td>
      <td>Country Share of All Core Contributions</td>
    </tr>
  </thead>
  <tbody>
  	<tr>
  		<td>$<%= core.toLocaleString() %></td>
      <td>
        <div class='left'><%= coreAllocation  %>%</div>
        <div class='right data wide'>
          <div class='subdata' style='width: 100%;'></div>
          <div class='fund' fund-percent=<%= coreAllocation  %>  style='width: <%= coreAllocation  %>%;'></div>
        </div>
      </td>
      <td>$<%= coreTotal.toLocaleString() %></td>
      <td>
        <div class='left'><%= corePct %>%</div>
        <div class='right data wide'>
          <div class='subdata' style='width: 100%;'></div>
          <div class='fund' fund-percent=<%= corePct %>  style='width: <%= corePct %>%;'></div>
        </div>
      </td>
  	</tr>
  </tbody>
</table>

<hr />

